<% include ../partials/header %>

<div class="card maincardbg shadow my-4 mx-md-5">
    <div class="card-header shadow-sm bg-light">
        <div class="no-gutters align-items-center d-flex justify-content-between">
            <div class="">
                <nav aria-label="breadcrumb">
                    <h3 class="headtitle">
                        <ol class="breadcrumb bg-transparent headtitle">
                            <li class="breadcrumb-item"><a class="text-dark" href="/jobs/"><strong>Jobs</strong></a></li>
                            <li class="breadcrumb-item"><a class="text-dark" href="/jobs/<%=job._id%>"><strong><%= job.jobId %> - <%= job.lastFirstName %></strong></a></li>
                            <li class="breadcrumb-item active" aria-current="page">Edit Comment</li>
                        </ol>
                    </h3>
                </nav>
            </div>
           	<div class="">
           		<button type="button" class="btn shadow-sm btn-md btn-outline-danger float-sm-right" data-toggle="modal" data-target="#deleteModal">Delete</button>
           		<!-- Modal -->
				<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
					<div class="modal-dialog" role="document">
						<div class="modal-content">
							<div class="modal-header shadow-sm bg-light">
							<h5 class="modal-title text-danger" id="deleteModalLabel">Warning!</h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								<p>Deleting is permanent and cannot be undone.</p>
								Are you sure you want to delete this comment?
							</div>
							<div class="modal-footer justify-content-between bg-light">
								<button type="button" class="btn shadow-sm btn-md btn-outline-secondary" data-dismiss="modal">Go Back</button>
								<form action="/jobs/<%= job_id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
									<button class="btn shadow-sm btn-md btn-danger float-sm-right" data-modal-action="yes">Delete</button>
								</form>
							</div>
						</div>
					</div>
				</div>
				<!-- Modal Ends -->
	        </div>
        </div>
    </div>
    <div class="container">
        <!-- Form Starts Here  -->
	    <form action="/jobs/<%= job_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="card shadow mt-5 mb-3 mx-md-5">
                <div class="card-header border-light">
                    <div class="form-group">
                        <label for="inputName"><strong>Edit Comment</strong></label>
                        <textarea class="form-control " type="text" name="comment[text]" id="inputName"placeholder=""><%= comment.text %></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group mb-5 mx-md-5">
    	        <input type="text" hidden name="comment[modifiedAt]" value="<%= Date.now() %>">
    	        <input type="text" hidden name="job[modifiedAt]" value="<%= Date.now() %>">
                <button class="btn shadow-sm btn-md btn-outline-success btn-block">Submit!</button>
            </div>
        </form>
    	<!-- Form Ends Here -->
    </div>
    <div class="card-footer shadow-sm bg-light">
    	<a class="btn shadow-sm btn-sm btn-outline-secondary" href="/jobs/<%=job_id%>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>