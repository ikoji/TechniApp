<% include ../partials/header %>

<div class="card my-4 mx-md-5">
    <div class="card-header">
        <div class="no-gutters align-items-center d-flex justify-content-between">
            <div class="">
                <nav aria-label="breadcrumb">
                    <h3 class="headtitle">
                        <ol class="breadcrumb bg-transparent headtitle">
                            <li class="breadcrumb-item"><a class="text-dark" href="/jobs/"><strong>Jobs</strong></a></li>
                            <li class="breadcrumb-item"><a class="text-dark" href="/jobs/<%=job._id%>"><strong><%= job.jobId %> - <%= job.customerName %></strong></a></li>
                            <li class="breadcrumb-item active" aria-current="page">Edit Comment</li>
                        </ol>
                    </h3>
                </nav>
            </div>
           	<div class="">
	            <form action="/jobs/<%= job_id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
	                <button class="btn btn-md btn-outline-danger float-sm-right">Delete</button>
	            </form>
	        </div>
        </div>
    </div>
    <div class="container">
        <!-- Form Starts Here  -->
	    <form action="/jobs/<%= job_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="card mt-5 mb-3 mx-md-5">
                <div class="card-header border-light">
                    <div class="form-group">
                        <!--<label for="inputName"><strong>Edit Comment</strong></label>-->
                        <textarea class="form-control mt-3" type="text" name="comment[text]" id="inputName"placeholder=""><%= comment.text %></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group mb-5 mx-md-5">
    	        <input type="text" hidden name="comment[modifiedAt]" value="<%= Date.now() %>">
    	        <input type="text" hidden name="job[modifiedAt]" value="<%= Date.now() %>">
                <button class="btn btn-md btn-outline-success btn-block">Submit!</button>
            </div>
        </form>
    	<!-- Form Ends Here -->
    </div>
    <div class="card-footer">
    	<a class="btn btn-sm btn-outline-secondary" href="/jobs/<%=job_id%>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>